<div class="row">
	<div class="span3">
		<h3>Totals</h3>
		<ul>
			<li><%= @items.count %> links.</li>
			<li>Tim: <%= @items.css("[data-submitter='stephens']").count %></li>
			<li>Guy: <%= @items.css("[data-submitter='lasnier']").count %></li>
			<li>Scott: <%= @items.css("[data-submitter='srapp']").count %></li>
			<li><a href="/csv">Download as a CSV file</a>.</li>
		</ul>
	</div>
</div>

<div style="margin-bottom: 2em;">
<table border="1" cellspacing="5" cellpadding="5">
<thead>
	<th style="width:12%;">Date Published</th>
	<th>Submitted by</th>
	<th style="width:14%;">Source</th>
	<th style="width:20%;">Title</th>
	<th>Description</th>
</thead>
<% @items.sort_by  %>
<% @items.each do |item| %>
<tr>
	<td><%= item.css('.date span').text %></td>
	<td><%= item['data-submitter'] %></td>
	<td><%= item.css('.source').text %></td>
	<td><%= item.css('h3 a') %></td>
	<td><%= item.css('.description') %></td>
</tr>
<% end %>
</table>
</div>